<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/member_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jimmy Johnson"
                    android:textColor="@color/black"
                    android:gravity="center"
                   />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contact_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/member_name1"
                    android:src="@drawable/dummy_contact_img1"
                    android:layout_margin="5dp"

                    />



                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4-2-1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@id/contact_image"
                    android:layout_centerVertical="true"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vs_bg"
                    android:text="VS"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="5dp"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/score2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4-2-1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/contact_image2"
                    android:layout_centerVertical="true"

                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contact_image2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dummy_member"
                    android:layout_margin="5dp"

                    />

                </RelativeLayout>

                <TextView
                    android:id="@+id/member_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Steve McQueen"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_below="@+id/main"
                    />

            </RelativeLayout>



        </LinearLayout>




    </LinearLayout>

</LinearLayout>