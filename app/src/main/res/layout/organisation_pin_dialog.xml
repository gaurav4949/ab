<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_bg">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organisation Pin"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:textColor="#4e4e4e"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#4e4e4e"
                android:layout_marginTop="5dp"
                android:text="Do you know your Organization pin?"/>


            <TextView
                android:id="@+id/yes_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Yes"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#fff"
                android:layout_below="@+id/tv2"
                android:background="@drawable/otp_dialog_fields_bg"/>



            <TextView
                android:id="@+id/no_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_below="@+id/yes_bt"
                android:text="No"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/otp_dialog_fields_bg"/>

            <TextView
                android:id="@+id/cancel_bt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_below="@+id/no_bt"
                android:background="@drawable/otp_dialog_fields_bg"
                android:layout_marginBottom="10dp"/>








        </RelativeLayout>





    </RelativeLayout>
</LinearLayout>