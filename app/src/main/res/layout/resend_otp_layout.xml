<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_bg">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Phone Number"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:textColor="#4e4e4e"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#4e4e4e"
                android:layout_marginTop="5dp"
                android:text="Your Phone Number Is Not Verified."/>

            <EditText
                android:id="@+id/enter_otp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv2"
                android:background="@drawable/resend_otp_txt"
                android:hint="Enter 6 Digit OTP"
                android:textColorHint="#cbcacf"
                android:gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:layout_marginTop="20dp"/>


            <TextView
                android:id="@+id/resend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Re-Send OTP"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#fff"
                android:layout_below="@+id/enter_otp"
                android:background="@drawable/otp_dialog_fields_bg"/>



            <TextView
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_below="@+id/resend"
                android:text="Proceed"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/otp_dialog_fields_bg"/>

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_below="@+id/proceed"
                android:background="@drawable/otp_dialog_fields_bg"
                android:layout_marginBottom="10dp"/>








        </RelativeLayout>





    </RelativeLayout>
</LinearLayout>